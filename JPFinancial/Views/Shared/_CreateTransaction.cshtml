@model  JPFData.ViewModels.TransactionViewModel

@Html.AntiForgeryToken()

<div class="table">
    <table class="table table-condensed table-responsive">
        <thead>
            <tr>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Date, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Payee, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Memo, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Type, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Category, htmlAttributes: new { @class = "control-label col-md-2 dropdown-toggle" })</th>
                <th scope="col"><label class="control-label">Credit</label></th>
                <th scope="col"><label class="control-label">Debit</label></th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.Amount, htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col">@Html.LabelFor(model => model.Entity.Transaction.UsedCreditCard, "Credit?", htmlAttributes: new { @class = "control-label col-md-2" })</th>
                <th scope="col"><label class="control-label">Credit Card</label></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>

                    <div class="form-group">
                        @Html.EditorFor(model => model.Entity.Transaction.Date, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Date, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Entity.Transaction.Payee, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Payee, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Entity.Transaction.Memo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Memo, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EnumDropDownListFor(model => model.Entity.Transaction.Type, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Type, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EnumDropDownListFor(model => model.Entity.Transaction.Category, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Category, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Entity.Transaction.CreditAccount, new SelectList(Model.Entity.Accounts, "Id", "Name"), " ", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.Entity.Accounts, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Entity.Transaction.DebitAccount, new SelectList(Model.Entity.Accounts, "Id", "Name"), " ", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.Entity.Accounts, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Entity.Transaction.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Entity.Transaction.Amount, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.Entity.Transaction.UsedCreditCard, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.Entity.Transaction.SelectedCreditCardAccountId, new SelectList(Model.Entity.CreditCards, "Id", "Name"), " ", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => Model.Entity.CreditCards, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <input type="submit" value="Enter Transaction" class="btn btn-primary btn-sm" />
                    </div>
                </td>
            </tr>
        </tbody>
        <tfoot></tfoot>
    </table>
</div>


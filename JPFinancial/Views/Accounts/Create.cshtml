@model JPFData.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add Account</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.HiddenFor(model => model.Entity.Account.UserId);
    <div class="form-horizontal">
        <h4>Account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Entity.Account.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Entity.Account.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entity.Account.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Entity.Account.Balance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Entity.Account.Balance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entity.Account.Balance, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Entity.Account.PaycheckContribution, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Entity.Account.PaycheckContribution, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entity.Account.PaycheckContribution, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @*<div class="form-group">
            @Html.LabelFor(model => model.Entity.Account.ExcludeFromSurplus, "Exclude from Surplus Calculations?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.CheckBoxFor(model => model.Entity.Account.ExcludeFromSurplus, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        
        <div id="divMandatoryAccount">
            <div class="form-group">
                @Html.LabelFor(model => model.Entity.Account.IsMandatory, "Mandatory Account?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.CheckBoxFor(model => model.Entity.Account.IsMandatory, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>*@

        <div id="divBalanceLimit">
            <div class="form-group">
                @Html.LabelFor(model => model.Entity.Account.BalanceLimit, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Entity.Account.BalanceLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Entity.Account.BalanceLimit, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    
    <script>
        var mandatoryAccountCb = document.getElementById('divMandatoryAccount');
        var balanceLimitDiv = document.getElementById('divBalanceLimit');

        function UpdateDivDisplay() {
            if (mandatoryAccountCb.checked) {
                balanceLimitDiv.style.display = "block";
            } else {
                balanceLimitDiv.style.display = "none";
            }
        };

        document.addEventListener("DOMContentLoaded", function() {
            UpdateDivDisplay();
        });

        mandatoryAccountCb.addEventListener('change', (event) => {
            UpdateDivDisplay();
        });
    </script>
}

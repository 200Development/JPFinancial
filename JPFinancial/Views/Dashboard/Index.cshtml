@model JPFData.ViewModels.DashboardViewModel


@{
    ViewBag.Title = "Main";
}

<div id="dashboard-header">
</div>

<div id="dashboard-left-menu">
</div>

<div id="dashboard-main-content">
    @using (Html.BeginForm())
    {
        <!-- BEGIN HIDDEN FIELDS AREA -->
        @Html.HiddenFor(m => m.EventCommand)
        @Html.HiddenFor(m => m.Mode)
        @Html.HiddenFor(m => m.EventArgument)
        <!-- END HIDDEN FIELDS AREA -->

        if (Model.IsCreateAreaVisible)
        {
            <!-- BEGIN CREATE TRANSACTION AREA-->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">Add Transaction</h1>
                </div>
                <div class="panel-body">
                    <div class="form-inline">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Date, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.CreateTransaction.Date, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Payee, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.CreateTransaction.Payee, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Memo, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.CreateTransaction.Memo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Type, new { @class = "control-label col-md-2" })
                            @Html.EnumDropDownListFor(model => model.Entity.CreateTransaction.Type, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Category, new { @class = "control-label col-md-2" })
                            @Html.EnumDropDownListFor(model => model.Entity.CreateTransaction.Category, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Credit</label>
                            @Html.DropDownListFor(model => model.Entity.CreateTransaction.SelectedCreditAccount, new SelectList(Model.Entity.Transaction.Accounts, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Debit</label>
                            @Html.DropDownListFor(model => model.Entity.CreateTransaction.SelectedDebitAccount, new SelectList(Model.Entity.Transaction.Accounts, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.Amount, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.CreateTransaction.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.CreateTransaction.UsedCreditCard, "Credit?", new { @class = "control-label col-md-2" })
                            @Html.CheckBoxFor(model => model.Entity.CreateTransaction.UsedCreditCard, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Credit Card</label>
                            @Html.DropDownListFor(model => model.Entity.CreateTransaction.SelectedCreditCardAccount, new SelectList(Model.Entity.Transaction.CreditCards, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button id="btnAdd" class="btn btn-sm btn-success" data-pdsa-action="add">
                        <i class="glyphicon-calendar glyphicon-plus"></i>&nbsp;Add
                    </button>
                </div>
            </div>
            <!-- END CREATE TRANSACTION AREA-->
        }

        if (Model.IsDetailAreaVisible)
        {
            <!-- BEGIN EDIT TRANSACTION AREA -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">Edit Transaction</h1>
                </div>
                <div class="panel-body">
                    <!-- BEGIN MESSAGE AREA -->
                    <div class="row">
                        <div class="col-xs-12">
                            @if (!Model.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissable" role="alert">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <span aria-hidden="true">&times;</span>
                                        <span class="sr-only">Close</span>
                                    </button>
                                    @Html.ValidationSummary(false)
                                </div>
                            }
                        </div>
                    </div>
                    <!-- END MESSAGE AREA -->
                    <div class="form-inline">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Date, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.Transaction.Date, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Payee, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.Transaction.Payee, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Memo, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.Transaction.Memo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Type, new { @class = "control-label col-md-2" })
                            @Html.EnumDropDownListFor(model => model.Entity.Transaction.Type, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Category, new { @class = "control-label col-md-2" })
                            @Html.EnumDropDownListFor(model => model.Entity.Transaction.Category, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Credit</label>
                            @Html.DropDownListFor(model => model.Entity.CreateTransaction.SelectedCreditAccount, new SelectList(Model.Entity.Transaction.Accounts, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Debit</label>
                            @Html.DropDownListFor(model => model.Entity.CreateTransaction.SelectedDebitAccount, new SelectList(Model.Entity.Transaction.Accounts, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.Amount, new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Entity.Transaction.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Entity.Transaction.UsedCreditCard, "Credit?", new { @class = "control-label col-md-2" })
                            @Html.CheckBoxFor(model => model.Entity.Transaction.UsedCreditCard, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Credit Card</label>
                            @Html.DropDownListFor(model => model.Entity.Transaction.SelectedCreditCardAccount, new SelectList(Model.Entity.Transaction.CreditCards, "Id", "Name"), " ", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button id="btnAdd" class="btn btn-sm btn-success" data-pdsa-action="add">
                        <i class="glyphicon-calendar glyphicon-plus"></i>&nbsp;Add
                    </button>
                </div>
            </div>
            <!-- END EDIT TRANSACTION AREA -->
        }

        if (Model.IsListAreaVisible)
        {
            <!-- BEGIN TRANSACTION LIST AREA-->
            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Payee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Memo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Entity.Transaction.UsedCreditCard)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Entity.Transactions)
                    {
                        <tr>
                            <td class="pdsa-action-button-column">
                                <a href="#" data-pdsa-action="edit"
                                   data-pdsa-val="@item.Id"
                                   class="btn btn-default btn-sm">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Payee)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Memo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsedCreditCard)
                            </td>
                            <td class="pdsa-action-button-column">
                                <a href="#" data-pdsa-action="delete"
                                   data-pdsa-val="@item.Id"
                                   class="btn btn-default btn-sm">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2">Total Transaction Cost: $12,334.52</td>
                        <td colspan="2">Average Transaction Cost: $18.21</td>
                        <td colspan="2">Largest Transaction: $1382.76</td>
                        <td colspan="2">Smallest Transaction: $0.21</td>
                    </tr>
                </tfoot>
            </table>
            <!-- END TRANSACTION LIST AREA-->
        }
    }
</div>

<div id="dashboard-middle-section">
</div>

<div id="dashboard-right-bar">
</div>

<div id="dashboard-footer">
</div>


@section scripts {

    <script>
        $(document).ready(function () {
            $("[data-pdsa-action]").on("click", function (e) {
                e.preventDefault();

                $("#EventCommand").val(
                    $(this).data("pdsa-action"));

                $("#EventArgument").val(
                    $(this).attr("data-pdsa-val"));

                $("form").submit();
            });
        });
    </script>
}








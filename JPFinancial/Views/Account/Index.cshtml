@model IEnumerable<JPFinancial.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaycheckContribution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredSavings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalanceSurplus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaycheckContribution)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredSavings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BalanceSurplus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>


